= form_tag('/reports', method: :get) do
  .row
    .large-4.columns
      = label_tag "Report Name"
      = select_tag "report_name", options_for_select([ "Master Employee", "Accept and Cancel Shift"], "")
      = label_tag "Start Date"
      = text_field_tag :start_date, nil,as: :string, class: "shiftdate", data: {date_format: "yyyy-mm-dd"}
      = label_tag "End Date"
      = text_field_tag :end_date,nil,as: :string, class: "shiftdate", data: {date_format: "yyyy-mm-dd"}

  .row
    .large-4.columns
      = submit_tag :submit, class: 'button'
